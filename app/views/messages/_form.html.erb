
      <%= form_for @message do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.text_field :sender_name, class: "form-control input-lg", placeholder: "Your Name" %>
          </div>
          <div class="form-group">
            <%= f.text_field :sender_email, class: "form-control input-lg", placeholder: "Your Email Address" %>
          </div>
          <div class="form-group">
            <%= f.text_field :sender_phone, class: "form-control input-lg", placeholder: "Your Phone Number" %>
          </div>
          <div class="form-group">
            <%= f.text_field :subject, class: "form-control input-lg", placeholder: "Subject" %>
          </div>
          <div class="form-group">
            <%= f.cktext_area :body, row: 10, class: "form-control input-lg", placeholder: "..." %>
          </div>
          <div class="form-group">
            <%= f.select :status, Message.statuses.keys, class: "form-control input-lg", prompt: "Select Status" %>
          </div>
        </div>

        <div class="modal-footer">
          <%= f.submit class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
