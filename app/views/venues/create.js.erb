<% if @message.errors.empty? %>
  // add the row to the table, show alert and hide modal
  $('table tbody').append(' <%= j render "row", product: @message %>');
  $('.alert-success').html("Your message has been sent").show();
  $('#message-modal').modal('hide');
<% else %>
  // show first error
  alert('<%= @message.errors.full_messages[0] %>');
<% end %>
